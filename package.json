{
  "name": "easyform-express",
  "version": "1.0.0",
  "description": "EasyForm Express backend with EasyForm API routes",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prestart": "npm run build",
    "start": "node dist/src/index.js",
    "build": "tsc",
    "postbuild": "cp -R public dist/public && cp -R components dist/components"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.0.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18"
  }
}
